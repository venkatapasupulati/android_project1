<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyActivity">

    <LinearLayout
        android:id="@+id/findMatchingLa"
        android:layout_width="406dp"
        android:layout_height="185dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/findMatching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find Matching Pairs"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/hardText"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:text="Easy"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/findMatchingLa"
        >


        <TextView
            android:id="@+id/firsttxt"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="First:"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/first"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="0"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/secondTxt"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Second:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/second"
            android:layout_width="152dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0"
            android:textSize="20sp" />


    </LinearLayout>

    <GridLayout
        android:id="@+id/rooLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/findMatchingLa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        tools:context=".EasyActivity" >

        <!--        <ImageView-->
        <!--            android:layout_width="57dp"-->
        <!--            android:layout_height="45dp"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:src="@drawable/ic_launcher_background" />-->


    </GridLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Score"

            />

        <TextView
            android:id="@+id/score"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="0"

            />

        <Button
            app:layout_constraintLeft_toLeftOf="@id/score"
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="RESTART"></Button>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>